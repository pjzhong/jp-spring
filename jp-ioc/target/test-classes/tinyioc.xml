<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:aop="http://www.springframework.org/schema/aop"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/aop
       http://www.springframework.org/schema/aop/spring-aop.xsd
       http://www.springframework.org/schema/tx
       http://www.springframework.org/schema/tx/spring-tx-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="jp.spring"/>

    <bean id="outputService" class="jp.spring.ioc.OutputService">
        <property name="helloService" ref="helloWorldService"/>
    </bean>

    <bean id="helloWorldService" class="jp.spring.ioc.HelloService">
        <property name="text" value="Hello World and pj_zhong!"/>
        <property name="outputService" ref="outputService"/>
    </bean>

    <bean id="autoProxyCreate" class="jp.spring.ioc.aop.AspectJAwareAdvisorAutoProxyCreator"></bean>

    <bean id="timeInterceptor" class="jp.spring.ioc.aop.TimerInterceptor"></bean>

    <bean id="aspectJAspect" class="jp.spring.ioc.aop.AspectJExpressionPointcutAdvisor">
        <property name="advice" ref="timeInterceptor"/>
        <property name="expression" value="execution(* jp.spring.ioc.HelloService.*(..))"></property>
    </bean>

</beans>